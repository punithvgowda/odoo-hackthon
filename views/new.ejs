<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Item</title>
  <link rel="stylesheet" href="new.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">
  <h1 class="mb-4">Add New Item</h1>
  <form method="post" action="/new" class="needs-validation" novalidate >

    <!-- Product Name -->
    <div class="mb-3">
      <label for="title" class="form-label">Product Name</label>
      <input name="name" placeholder="Product name" type="text" class="form-control" id="title" required>
      <div class="invalid-feedback">Title should be valid!</div>
      <div class="valid-feedback">Looks great!</div>
    </div>

    <!-- Description -->
    <div class="mb-3">
      <label for="in-description" class="form-label">Description</label>
      <textarea name="description" placeholder="Description" class="form-control" id="in-description" required></textarea>
      <div class="invalid-feedback">Enter a short description</div>
      <div class="valid-feedback">Looks great!</div>
    </div>

    <!-- Image URL -->
    <div class="mb-3">
      <label for="in-url" class="form-label">Image</label>
      <input name="image" placeholder="Paste Image URL" type="url" id="in-url" class="form-control">
    </div>

    <!-- Price & Location -->
    <div class="row">
      <div class="mb-3 col-md-4">
        <label for="in-price" class="form-label">Price</label>
        <input name="price" placeholder="Enter Price" id="in-price" class="form-control" type="number" required>
        <div class="invalid-feedback">Enter a price</div>
        <div class="valid-feedback">Looks great!</div>
      </div>

      <div class="mb-3 col-md-8">
        <label for="in-location" class="form-label">Location</label>
        <input name="location" placeholder="Enter Location" type="text" class="form-control" id="in-location" required>
        <div class="invalid-feedback">Location should be valid</div>
        <div class="valid-feedback">Looks great!</div>
      </div>
    </div>

    <!-- Donating -->
    <div class="mb-3">
      <label for="in-donating" class="form-label">Donating</label>
      <select name="donating" id="in-donating" class="form-control" required>
        <option value="">Select</option>
        <option value="Yes">Yes</option>
        <option value="No">No</option>
      </select>
      <div class="invalid-feedback">Please select an option</div>
    </div>

    <!-- Submit Button -->
    <div class="mb-3">
      <button type="submit" class="btn btn-success">ADD</button>
    </div>

  </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Bootstrap form validation
  (() => {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>

</body>
</html>
